# TradingAgents Backend 环境变量配置

# ==================== 服务配置 ====================
# 服务端口
API_GATEWAY_PORT=8000
ANALYSIS_ENGINE_PORT=8001
DATA_SERVICE_PORT=8002

# 服务地址（本地开发）
API_GATEWAY_HOST=localhost
ANALYSIS_ENGINE_HOST=localhost
DATA_SERVICE_HOST=localhost

# ==================== 数据库配置 ====================
# Redis 缓存
REDIS_URL=redis://localhost:6379

# MongoDB 主数据库
MONGODB_URL=mongodb://admin:tradingagents123@localhost:27017/tradingagents?authSource=admin

# MongoDB 集群配置（生产环境）
# MONGODB_URL=mongodb://admin:password@mongo1:27017,mongo2:27017,mongo3:27017/tradingagents?replicaSet=rs0&authSource=admin

# ==================== AI API 密钥 ====================
# 阿里百炼 API
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# DeepSeek API
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API
GOOGLE_API_KEY=your_google_api_key_here

# ==================== 数据源 API 密钥 ====================
# Tushare 数据源 (A股专业数据)
TUSHARE_TOKEN=your_tushare_token_here

# FinnHub 数据源 (美股数据)
FINNHUB_API_KEY=your_finnhub_api_key_here

# Alpha Vantage 数据源 (Yahoo Finance替代 - 推荐)
# 获取地址: https://www.alphavantage.co/support/#api-key
# 完全免费：每天500次请求，每分钟5次请求
# 支持：实时数据、历史数据、技术指标、基本面数据
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here



# Twelve Data 数据源 (Yahoo Finance替代 - 强烈推荐)
# 获取地址: https://twelvedata.com/
# 免费版：每天800次请求，每分钟8次请求
# 支持：全球市场、实时数据、历史数据、技术指标
# 特点：访问稳定，支持美股和港股
TWELVE_DATA_API_KEY=your_twelve_data_api_key_here

# ==================== 数据源超时配置 ====================
# 数据源请求超时时间（秒）
TUSHARE_TIMEOUT=60
AKSHARE_TIMEOUT=120
FINNHUB_TIMEOUT=60
YFINANCE_TIMEOUT=90
ALPHA_VANTAGE_TIMEOUT=60
IEX_CLOUD_TIMEOUT=60
TWELVE_DATA_TIMEOUT=60

# API请求超时时间（秒）
API_STOCK_INFO_TIMEOUT=180
API_ENHANCED_DATA_TIMEOUT=300

# ==================== 系统配置 ====================
# 环境模式
ENVIRONMENT=development
DEBUG=true

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=

# ==================== 安全配置 ====================
# JWT 密钥（如果需要认证）
JWT_SECRET_KEY=your_jwt_secret_key_here

# API 限流配置
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
